<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.teamunivr.powerstrips.view.MainController">
   <children>
      <GridPane layoutX="50.0" layoutY="14.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="15.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Nome" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <Label text="Cognome" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
            <Label text="Tipologia" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <Label text="Numero" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
             <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddButton" text="Uscita"
                     GridPane.columnIndex="4" GridPane.halignment="CENTER" GridPane.rowSpan="2"
                     GridPane.valignment="CENTER"/>
             <ComboBox fx:id="comboBoxTypes" prefWidth="150.0" GridPane.columnIndex="3"/>
             <ComboBox fx:id="comboBoxIDs" prefWidth="150.0" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
             <TextField fx:id="name" GridPane.columnIndex="1"/>
             <TextField fx:id="lastName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
         </children>
      </GridPane>
       <TableView fx:id="loansTable" layoutX="50.0" layoutY="75.0" prefHeight="310.0" prefWidth="500.0"
                  AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0"
                  AnchorPane.topAnchor="85.0">
        <columns>
            <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Nome"/>
            <TableColumn fx:id="lastNameColumn" prefWidth="75.0" text="Cognome"/>
            <TableColumn fx:id="IDColumn" prefWidth="75.0" text="Numero ciabatta"/>
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</AnchorPane>
